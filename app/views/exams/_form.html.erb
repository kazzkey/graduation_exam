<%= form_with(model: exam, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.label :deadline %>
    <%= form.date_field :deadline, value: Time.now.strftime("%Y-%m-%d") %>
    <%= form.label :release %>
    <%= form.check_box :release, {}, "true", "false" %>
  </div>


  <!-- ネストフォーム(questions) -->
  <div>
    <%= form.fields_for :questions do |f| %>

      <div class="content">
        <%= f.label :content %>
        <%= f.text_area :content %>
      </div>

      <div class="field">
        <%= f.label :correct_answer %>
        <%= f.select :correct_answer, {'①':1, '②':2, '③':3, '④':4}, { include_blank: '選択してください' } %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>
    <% end %>
  </div>

  <%= form.submit "create" %>
<% end %>
