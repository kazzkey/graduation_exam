<div class="card p-4">
  <p>学籍番号：<%= @user.student_id %></p>

  <p>氏名：<%= @user.name %></p>

  <p>メールアドレス：<%= @user.email %></p>
</div>

<div>
  <%= link_to edit_user_registration_path, class: "btn btn-sm btn-outline-primary" do %>
   <i class="fas fa-cog"> プロフィールを編集</i>
  <% end %>

  <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-sm btn-outline-primary" do %>
   <i class="fas fa-sign-out-alt"> ログアウト</i>
  <% end %>
</div>

<hr class="my-5">

<% unless @user.admin? %>
  <h3 class="text-primary">テスト成績</h3>
  <%= area_chart [{ name: "得点", data: @point_charts }, { name: "平均点", data: @average_charts }] %>
<% end %>
