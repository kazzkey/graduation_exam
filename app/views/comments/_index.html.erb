<div>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <div class="card p-4 bg-secondary">
        <div class="row">
          <p class="col"><%= comment.user.name %></p>
          <p class="col text-right"><%= time_ago_in_words(comment.created_at) %>前</p>
        </div>

        <div class="comment-content" id="this_comment_<%= comment.id %>">
          <p><%= simple_format comment.content %></p>
          <p class="text-right">
            <% if current_user.id == comment.user_id || current_user.admin %>
              <%= link_to "編集", edit_answer_sheet_comment_path(answer_sheet, comment), remote: true %>
              <%= link_to "削除", answer_sheet_comment_path(comment.answer_sheet_id, comment.id), method: :delete, remote: true,
                                          data: { confirm: "本当に削除しますか?"} %>
            <% end %>
          </p>
        </div>
      </div>
      <br>
    <% end %>
  <% end %>
</div>
